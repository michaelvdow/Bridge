<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout4">

    <data>
        <variable name="viewModel"
                  type="com.apps.michaeldow.projectdao.login.LoginViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/colorPurple">


        <ImageView
                android:layout_width="292dp"
                android:layout_height="294dp" app:srcCompat="@mipmap/bridge_high"
                android:id="@+id/logo4" android:adjustViewBounds="false"
                android:cropToPadding="false" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="84dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="59dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Bridge"
                android:layout_width="159dp"
                android:layout_height="53dp"
                android:id="@+id/bridge4"
                android:fontFamily="@font/lato_bold" android:textSize="40sp" android:textColor="@color/colorWhite"
                android:textAlignment="center" android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="126dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="126dp"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="264dp"
                app:layout_constraintTop_toTopOf="@+id/logo4"/>
        <Button
                android:text="Log In"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:id="@+id/button"
                android:onClick="@{() -> viewModel.onSignInClick()}"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
                android:textSize="20sp"
                android:textColor="@color/colorPurpleBlack" android:background="@color/colorPurpleWhite"
                android:textAllCaps="false" android:fontFamily="@font/lato_regular"
                android:layout_marginBottom="152dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="Reset email has been sent!"
                android:layout_width="221dp"
                android:layout_height="38dp"
                android:id="@+id/textView2" android:textAlignment="center"
                android:textSize="16sp" android:textColor="@color/colorWhite"
                android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/button"
                android:fontFamily="@font/roboto_black" android:layout_marginStart="92dp"
                app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
