<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/chatFragment">
    <fragment android:id="@+id/loginFragment" android:name="com.apps.michaeldow.projectdao.login.LoginFragment"
              android:label="LoginFragment">
        <action android:id="@+id/action_loginFragment_to_chatFragment2" app:destination="@id/chatFragment"
                app:popUpToInclusive="false"/>
        <action android:id="@+id/action_loginFragment_to_signUpFragment" app:destination="@id/signUpFragment"
                app:popUpToInclusive="true" app:popUpTo="@+id/nav_graph"/>
    </fragment>
    <fragment android:id="@+id/chatFragment"
              android:name="com.apps.michaeldow.projectdao.MainActivity.ChatFragment.ChatFragment"
              android:label="ChatFragment">
        <action android:id="@+id/action_chatFragment_to_loginFragment" app:destination="@id/loginFragment"
                app:launchSingleTop="false" app:popUpTo="@+id/nav_graph" app:popUpToInclusive="true"/>
    </fragment>
    <fragment android:id="@+id/signUpFragment" android:name="com.apps.michaeldow.projectdao.signup.SignUpFragment"
              android:label="SignUpFragment">
        <action android:id="@+id/action_signUpFragment_to_loginFragment" app:destination="@id/loginFragment"
                app:popUpToInclusive="true" app:popUpTo="@+id/nav_graph"/>
        <action android:id="@+id/action_signUpFragment_to_chatFragment" app:destination="@id/chatFragment"/>
    </fragment>
</navigation>